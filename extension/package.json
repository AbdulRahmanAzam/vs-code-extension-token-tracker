{
  "name": "token-tracker-extension",
  "displayName": "Token Tracker - Copilot Usage Limiter",
  "description": "Track and limit GitHub Copilot token usage with centralized monthly budgets, per-user allocations, real-time monitoring, and automatic blocking when limits are reached. Sign in once â€” zero setup required.",
  "version": "2.0.0",
  "publisher": "Abdul-Rahman-Azam",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbdulRahmanAzam/vs-code-extension-token-tracker"
  },
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "keywords": [
    "copilot",
    "token",
    "usage",
    "limiter",
    "budget",
    "tracker",
    "ai",
    "saas"
  ],
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tokenTracker.enterKey",
        "title": "Token Tracker: Enter Token Key"
      },
      {
        "command": "tokenTracker.showBalance",
        "title": "Token Tracker: Show Balance"
      },
      {
        "command": "tokenTracker.syncNow",
        "title": "Token Tracker: Sync with Server"
      },
      {
        "command": "tokenTracker.showHistory",
        "title": "Token Tracker: Show Usage History"
      },
      {
        "command": "tokenTracker.deactivate",
        "title": "Token Tracker: Remove Token Key & Reset"
      },
      {
        "command": "tokenTracker.configure",
        "title": "Token Tracker: Configure Server URL"
      }
    ],
    "configuration": {
      "title": "Token Tracker",
      "properties": {
        "tokenTracker.serverUrl": {
          "type": "string",
          "default": "https://tokentrackerbackend.abdulrahmanazam.me",
          "description": "URL of the central token tracking server. Only change if self-hosting."
        },
        "tokenTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable token tracking"
        },
        "tokenTracker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show token balance in status bar"
        },
        "tokenTracker.blockOnLimitReached": {
          "type": "boolean",
          "default": true,
          "description": "Block Copilot when token limit is reached"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package --allow-missing-repository"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^3.2.0"
  }
}
